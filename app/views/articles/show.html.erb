<div class="jumbotron">
  <h1 class="display-3"><%= @article.title %></h1>
</div>

<% if @article.image? %>
 <div class="image_wrapper">
   <%= image_tag(@article.image.url, alt: 'Image') %>
 </div>
 <% end %>
 <p><%= raw @article.body %></p>
 <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary btn-lg' %>
