<div class="card" style="width: 20rem;">
  <div class="card=body">
    <h4 class="card-title"><%= link_to article.title, article_path(article) %></h4>
    <p class="card-text"><%= truncate(article.body, length: 150) %></p>
    <%= link_to 'Edit', edit_article_path(article), class: "btn btn-success" %>
    <% link_to 'Delete', article_path(article), :method => :delete, class: "btn btn-danger" %>
  </div>
</div>
